V3_FACTORY=0x33128a8fC17869897dcE68Ed026d694621f6FDfD
SWAP_ROUTER=0x2626664c2603336E57B271c5C0b26F421741e481
POOL_INIT_CODE_HASH=0xe34f199b19b2b4f47f68442619d555527d244f78a3297ea89325f843f87b8b54
MULTICALL3=0xcA11bde05977b3631167028862bE2a173976CA11

# ============================================
# Arbitrage Settings
# ============================================
# Minimum profit threshold (in ETH)
MIN_PROFIT_ETH=0.0001

# Dynamic borrow amount optimization range
MIN_BORROW_ETH=0.01
MAX_BORROW_ETH=20.0
AMOUNT_PRECISION_ETH=0.001

# Fee tiers to scan (500=0.05%, 3000=0.3%, 10000=1%)
FEE_TIERS=500,3000,10000
FLASH_FEE_TIER=500

# ============================================
# Gas Settings
# ============================================
MAX_GAS_GWEI=10
GAS_LIMIT=500000
TX_TIMEOUT=60

# Sniper Mode - Aggressive gas for HFT
SNIPER_MODE_ENABLED=true
SNIPER_MODE_MULTIPLIER=2.0

# ============================================
# ‚ö° Private Transaction Settings (MEV Protection)
# ============================================
# Enable to send transactions via private RPC (bypass mempool)
PRIVATE_TX_ENABLED=false

# Your private RPC endpoint (recommended for production)
# Options:
#   - LlamaNodes: https://base.llamarpc.com (free, private by default)
#   - BlastAPI: https://base-mainnet.blastapi.io/your-api-key
#   - Alchemy: https://base-mainnet.g.alchemy.com/v2/your-api-key
PRIVATE_RPC_URL=

# Bundle simulation endpoint (optional, for Flashbots-style simulation)
BUNDLE_SIMULATION_RPC=

# ============================================
# Scanning Settings
# ============================================
SCAN_INTERVAL=1.0
MIN_LIQUIDITY=1000000000000000
MIN_LIQUIDITY_ETH=0.5

# ============================================
# üõ°Ô∏è Safety Layers (Base Chain Hardening)
# ============================================

# Pitfall 1: L1 Data Fee (included in profit calculation)
# Minimum profit after L1 fee deduction (wei)
MIN_PROFIT_AFTER_L1_FEE=100000000000000

# Pitfall 2: QuoterV2 address for tick crossing verification
QUOTER_V2=0x3d4e44Eb1374240CE5F1B871ab261CD16335B76a

# Pitfall 3: Slippage tolerance (basis points, 50 = 0.5%)
# NEVER send amountOutMinimum = 0 (JIT protection)
SLIPPAGE_TOLERANCE_BPS=50

# Pitfall 5: Strict simulation profit verification
STRICT_SIMULATION_CHECK=true

# ============================================
# üîÑ Stuck Transaction / Speed Up Settings
# ============================================

# Enable automatic transaction speed-up
TX_SPEEDUP_ENABLED=true

# Initial wait before first speed-up attempt (seconds)
TX_INITIAL_WAIT=5.0

# Wait time between speed-up attempts (seconds)
TX_SPEEDUP_INTERVAL=3.0

# Gas price increase per speed-up attempt (percentage)
TX_SPEEDUP_GAS_BUMP_PCT=15.0

# Maximum gas price cap (gwei) - prevents wallet drain
TX_MAX_GAS_GWEI=50.0

# Maximum speed-up attempts before giving up
TX_MAX_SPEEDUP_ATTEMPTS=5

# Total timeout before giving up (seconds)
TX_TOTAL_TIMEOUT=120.0

# ============================================
# Operation Modes
# ============================================
DRY_RUN=true
DEBUG_MODE=false
LATENCY_PROFILING=true
SHADOW_MODE_ENABLED=true
SHADOW_SPREAD_THRESHOLD=0.005

# ============================================
# Safety Limits
# ============================================
MAX_CONSECUTIVE_FAILURES=5
FAILURE_PAUSE_DURATION=60
MAX_TX_PER_HOUR=100
MIN_BALANCE_ETH=0.01

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/flasharb.log

# ============================================
# Target Tokens (Uncomment tokens to monitor)
# ============================================
