# Price staleness threshold (seconds)
# Re-fetch prices if older than this
PRICE_STALENESS_THRESHOLD=5

# slippage tolerance (percentage, e.g., 0.5 = 0.5%)
SLIPPAGE_TOLERANCE=0.5
