# ============================================
# ðŸ“Š ARBITRAGE CONFIGURATION
# ============================================

# Minimum profit threshold (ETH)
# Only execute if net profit > this value
MIN_PROFIT_ETH=0.001

# Flash loan borrow amount (ETH)
# Higher = more profit potential, but more risk
BORROW_AMOUNT_ETH=1.0

# Maximum borrow amount limit (ETH)
MAX_BORROW_ETH=10.0

# Scan interval (seconds)
# Lower = faster detection, but more RPC calls
SCAN_INTERVAL=1.0

# ============================================
# â›½ GAS CONFIGURATION
# ============================================

# Maximum gas price willing to pay (gwei)
MAX_GAS_GWEI=1.0

# Gas limit for arbitrage transaction
GAS_LIMIT=500000

# Sniper Mode: Priority fee multiplier
# 1.0 = normal, 1.2 = 20% boost, 1.5 = 50% boost
# Higher = more likely to win block, but higher cost
SNIPER_MODE_MULTIPLIER=1.2

# Enable Sniper Mode (true/false)
SNIPER_MODE_ENABLED=true

# ============================================
# ðŸ“ˆ FEE TIER CONFIGURATION
# ============================================
# V3 pools have different fee tiers:
#   500   = 0.05% (stablecoins, highly correlated pairs)
#   3000  = 0.3%  (standard pools)
#   10000 = 1%    (exotic pairs)
#
# Format: comma-separated fee values
FEE_TIERS=500,3000,10000

# Preferred flash loan fee tier (lower = cheaper)
# 500 = 0.05% flash loan fee
FLASH_FEE_TIER=500

# ============================================
# ðŸ”¬ MODE CONFIGURATION
# ============================================

# Dry run - simulate only, no real transactions
# true  = Safe mode, no real money
# false = Live mode, real transactions
DRY_RUN=true

# Debug mode - verbose logging
# Shows pool discovery, price calculations, etc.
DEBUG_MODE=false

# ============================================
# ðŸ“Š PROFILING & DIAGNOSTICS
# ============================================

# Latency profiling - show timing metrics
# Displays: Network time, Calc time, Exec time, etc.
LATENCY_PROFILING=true

# Shadow mode - log near-miss opportunities
# Logs opportunities that were close but not profitable
SHADOW_MODE_ENABLED=true

# Shadow mode threshold (spread percentage)
# Log if spread > this but profit < MIN_PROFIT
SHADOW_SPREAD_THRESHOLD=0.005

# ============================================
# ðŸ’§ LIQUIDITY FILTERS
# ============================================

# Minimum pool liquidity (in raw units)
# Filters out dead/dust pools
MIN_LIQUIDITY=1000000000000000

# Minimum ETH-equivalent reserve (ETH)
# Skip pairs with less than this in reserves
MIN_LIQUIDITY_ETH=0.5

# ============================================
# ðŸ“ LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (relative or absolute)
LOG_FILE=logs/flasharb.log

# Trade history CSV
TRADE_HISTORY_FILE=logs/trade_history.csv

# Max log file size (MB) before rotation
MAX_LOG_SIZE_MB=10

# ============================================
# ðŸ”” NOTIFICATIONS (Optional)
# ============================================

# Telegram notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Discord webhook
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# ============================================
# ðŸ›¡ï¸ SAFETY LIMITS
# ============================================

# Maximum consecutive failures before pause
MAX_CONSECUTIVE_FAILURES=5

# Pause duration after max failures (seconds)
FAILURE_PAUSE_DURATION=60

# Maximum transactions per hour
MAX_TX_PER_HOUR=100

# Emergency stop if balance drops below (ETH)
MIN_BALANCE_ETH=0.01

# ============================================
# ðŸ§ª ADVANCED (Usually don't need to change)
# ============================================

# Number of confirmations to wait
TX_CONFIRMATIONS=1

# Transaction timeout (seconds)
TX_TIMEOUT=60

# Retry attempts for failed RPC calls
RPC_RETRY_ATTEMPTS=3

# Retry delay (seconds)
