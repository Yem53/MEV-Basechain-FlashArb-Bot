# ============================================
# FlashArb-Core Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# --------------------------------------------
# Network Configuration
# --------------------------------------------
# Base Mainnet RPC (use Alchemy, Infura, or QuickNode)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Chain ID (8453 for Base Mainnet)
CHAIN_ID=8453

# --------------------------------------------
# Wallet Configuration
# --------------------------------------------
# Your wallet private key (without 0x prefix is OK)
# ⚠️ WARNING: Never share this! Use a dedicated bot wallet!
PRIVATE_KEY=your_private_key_here

# --------------------------------------------
# Contract Addresses
# --------------------------------------------
# FlashBot V2 contract address (legacy)
FLASHBOT_ADDRESS=0x...

# FlashBot V3 contract address (new - native V3 flash loans)
FLASHBOT_V3_ADDRESS=0x...

# WETH address on Base
WETH_ADDRESS=0x4200000000000000000000000000000000000006

# Target Router (e.g., BaseSwap Router)
TARGET_ROUTER=0x327Df1E6de05895d2ab08513aaDD9313Fe505d86

# --------------------------------------------
# Uniswap V3 Configuration (Base Mainnet)
# --------------------------------------------
# V3 Factory
V3_FACTORY=0x33128a8fC17869897dcE68Ed026d694621f6FDfD

# V3 SwapRouter02
V3_ROUTER=0x2626664c2603336E57B271c5C0b26F421741e481

# Preferred flash loan fee tier (100=0.01%, 500=0.05%, 3000=0.3%, 10000=1%)
# 0.05% is recommended for lowest flash loan cost
FLASH_FEE_TIER=500

# Default borrow amount for arbitrage (in ETH)
BORROW_AMOUNT_ETH=1.0

# --------------------------------------------
# Bot Configuration
# --------------------------------------------
# Minimum profit threshold (in ETH)
MIN_PROFIT_THRESHOLD=0.0003

# Scan interval (in seconds)
SCAN_INTERVAL=0.5

# Gas price (in Gwei)
GAS_PRICE_GWEI=0.01

# Debug mode (true/false) - shows detailed logs
DEBUG_MODE=false

# Dry run mode (true/false) - simulates without executing
DRY_RUN=true

# Shadow Mode - log rejected opportunities for diagnostics
SHADOW_MODE=true
SHADOW_SPREAD_THRESHOLD=0.005

# Latency Profiling - measure performance
LATENCY_PROFILING=true

# Debug Liquidity - log low liquidity pools being filtered
DEBUG_LIQUIDITY=false

# --------------------------------------------
# Optional: MEV Protection
# --------------------------------------------
# Flashbots auth key (for Ethereum mainnet)
# FLASHBOTS_AUTH_KEY=

# --------------------------------------------
# Optional: Alerts
# --------------------------------------------
# Telegram Bot Token (for notifications)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=


