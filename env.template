# ============================================
# FlashArb V3 - Native Uniswap V3 Arbitrage Bot
# ============================================
# Copy to .env and fill in your values
# NEVER commit .env to git!

# --------------------------------------------
# Network Configuration
# --------------------------------------------
# Base Mainnet RPC (use Alchemy, Infura, QuickNode)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Chain ID (8453 for Base Mainnet)
CHAIN_ID=8453

# --------------------------------------------
# Wallet Configuration
# --------------------------------------------
# Private key (without 0x prefix is OK)
# ⚠️ WARNING: Use a dedicated bot wallet!
PRIVATE_KEY=your_private_key_here

# --------------------------------------------
# Contract Addresses
# --------------------------------------------
# FlashBotV3 contract (after deployment)
FLASHBOT_ADDRESS=0x...

# --------------------------------------------
# V3 Constants - Base Mainnet
# --------------------------------------------
# Uniswap V3 Factory
V3_FACTORY=0x33128a8fC17869897dcE68Ed026d694621f6FDfD

# Uniswap V3 SwapRouter02
SWAP_ROUTER=0x2626664c2603336E57B271c5C0b26F421741e481

# WETH on Base
WETH=0x4200000000000000000000000000000000000006

# --------------------------------------------
# Arbitrage Configuration
# --------------------------------------------
# Minimum profit threshold (ETH)
MIN_PROFIT_ETH=0.001

# Flash loan borrow amount (ETH)
BORROW_AMOUNT_ETH=1.0

# Scan interval (seconds)
SCAN_INTERVAL=1.0

# Maximum gas price (gwei)
MAX_GAS_GWEI=1.0

# --------------------------------------------
# Mode Configuration
# --------------------------------------------
# Dry run - simulate only, no real transactions
DRY_RUN=true

# Latency profiling - show timing metrics
LATENCY_PROFILING=true

# Debug mode - verbose logging
DEBUG_MODE=false
